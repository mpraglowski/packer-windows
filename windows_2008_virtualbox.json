{
  "builders": [{
    "type": "virtualbox-iso",
    "iso_url": "./iso/en_windows_server_2008_with_sp2_x64_dvd_342336.iso",
    "iso_checksum_type": "sha1",
    "iso_checksum": "34C7D726C57B0F8B19BA3B40D1B4044C15FC2029",
    "headless": false,
    "boot_wait": "5m",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "2h",
    "shutdown_command": "shutdown /s /t 10  /f /d p:4:1 /c \"Vagrant Shutdown\"",
    "guest_additions_mode": "disable",
    "guest_os_type": "Windows2008_64",
    "disk_size": 61440,
    "floppy_files": ["./answer_files/2008/Autounattend.xml", "./scripts/install-cygwin-sshd.bat", "./scripts/install-win-updates.ps1"],
    "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1024"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": ["./scripts/postinstall.sh", "./scripts/install-virtualbox-tools.sh", "./scripts/install-puppet.sh"]
  }],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": false,
    "output": "windows_2008_{{.Provider}}.box",
    "vagrantfile_template": "vagrantfile-windows_2008.template"
  }]
}
